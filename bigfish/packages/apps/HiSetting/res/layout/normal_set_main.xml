<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/normal_set_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:id="@+id/normal_set_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/normal_set_main_image"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:text="@string/normal_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/normal_set_main_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/normal_title_hint"/>
    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp" >
        <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="23dp"
         android:scaleType="fitXY"
         android:focusable="false"
         android:src="@drawable/line"/>
     <RelativeLayout
        android:id="@+id/normal_set_input"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-25dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
     <LinearLayout
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:orientation="vertical">
     <TextView
         android:id="@+id/normal_input_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/normal_input"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_marginLeft="300dp"
         android:gravity="center_vertical"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/normal_input_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
      <LinearLayout
         android:layout_width="130dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center"
         android:orientation="horizontal">
     <com.android.hisiliconsetting.normal.MarqueeText
         android:id="@+id/normal_input_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:singleLine="true"
         android:ellipsize="marquee"
         android:textSize="18sp"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/normal_input_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_marginLeft="30dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginLeft="23dp"
         android:layout_below="@+id/normal_set_input"
         android:layout_marginTop="-25dp"
         android:focusable="false"
         android:src="@drawable/line"/>
      <RelativeLayout
        android:id="@+id/normal_language"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-48dp"
        android:layout_below="@+id/normal_set_input"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
      <LinearLayout
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="vertical">
     <TextView
         android:id="@+id/normal_language_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/normal_language"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_marginLeft="300dp"
         android:gravity="center_vertical"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/normal_language_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="130dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center"
         android:orientation="horizontal">
     <TextView
         android:id="@+id/normal_language_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"
         android:text="@string/normal_language_EN"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/normal_language_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginLeft="23dp"
         android:layout_marginTop="-25dp"
         android:layout_below="@+id/normal_language"
         android:focusable="false"
         android:src="@drawable/line"/>
     <RelativeLayout
        android:id="@+id/normal_samba"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-48dp"
        android:nextFocusUp="@+id/normal_language"
        android:layout_below="@+id/normal_language"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
      <LinearLayout
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="vertical">
     <TextView
         android:id="@+id/normal_samba_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/normal_samba"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_marginLeft="300dp"
         android:gravity="center_vertical"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/normal_samba_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="130dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center"
         android:orientation="horizontal">
     <TextView
         android:id="@+id/normal_samba_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"
         android:text="@string/normal_samba_off"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/normal_samba_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginLeft="23dp"
         android:layout_marginTop="-25dp"
         android:layout_below="@+id/normal_samba"
         android:focusable="false"
         android:src="@drawable/line"/>
     <RelativeLayout
        android:id="@+id/normal_devices"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-48dp"
        android:nextFocusUp="@+id/normal_samba"
        android:layout_below="@+id/normal_samba"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
      <LinearLayout
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="vertical">
     <TextView
         android:id="@+id/normal_devices_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/normal_devices"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_marginLeft="300dp"
         android:gravity="center_vertical"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/normal_devices_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="130dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center"
         android:orientation="horizontal">
     <TextView
         android:id="@+id/normal_devices_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="14sp"
         android:text="@string/normal_samba_off"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/normal_devices_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginLeft="23dp"
         android:layout_marginTop="-25dp"
         android:layout_below="@+id/normal_devices"
         android:focusable="false"
         android:src="@drawable/line"/>
    <RelativeLayout
        android:id="@+id/normal_recovery"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-48dp"
        android:nextFocusUp="@+id/normal_devices"
        android:layout_below="@+id/normal_devices"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
      <LinearLayout
          android:layout_width="300dp"
          android:layout_height="45dp"
          android:layout_marginTop="5dp"
          android:gravity="center_vertical"
          android:orientation="vertical" >
     <TextView
         android:id="@+id/normal_recovery_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/normal_recovery"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="300dp"
         android:layout_marginTop="15dp"
         android:orientation="horizontal">
         <ImageView
             android:id="@+id/normal_recovery_right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="130dp"
             android:background="@drawable/arrow_right"
             android:focusable="false" />

      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginTop="-25dp"
         android:layout_marginLeft="23dp"
         android:layout_below="@+id/normal_recovery"
         android:focusable="false"
         android:src="@drawable/line"/>
     <RelativeLayout
        android:id="@+id/normal_set"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-48dp"
        android:nextFocusUp="@+id/normal_recovery"
        android:layout_below="@+id/normal_recovery"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
      <LinearLayout
          android:layout_width="300dp"
          android:layout_height="45dp"
          android:layout_marginTop="5dp"
          android:gravity="center_vertical"
          android:orientation="vertical" >
     <TextView
         android:id="@+id/normal_set_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/normal_set"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="300dp"
         android:layout_marginTop="15dp"
         android:orientation="horizontal">
         <ImageView
             android:id="@+id/normal_set_right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="130dp"
             android:background="@drawable/arrow_right"
             android:focusable="false" />
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginTop="-25dp"
         android:layout_marginLeft="23dp"
         android:layout_below="@+id/normal_set"
         android:focusable="false"
         android:src="@drawable/line"/>

    </RelativeLayout>
</LinearLayout>
