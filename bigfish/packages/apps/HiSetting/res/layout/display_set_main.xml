<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/secure_set_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:id="@+id/display_set_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/secure_set_main_image"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:text="@string/display_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/display_set_main_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/display_title_hint"/>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">
     <RelativeLayout
         android:id="@+id/display_scale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:focusable="true"
         android:clickable="true"
         android:gravity="center"
         android:background="@drawable/display_button_selector">
     <ImageView
         android:id="@+id/display_scale_image"
         android:layout_width="264dp"
         android:layout_height="184dp"
         android:focusable="false"
         android:background="@drawable/logo_ratio"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="120dp"
         android:text="@string/display_scale"
         android:textColor="@android:color/white"
         android:textSize="18sp" />
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">
     <ImageView
         android:id="@+id/display_set_up"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_centerHorizontal="true"
         android:focusable="false"
         android:background="@drawable/arrow_normal_up"/>
     <RelativeLayout
        android:id="@+id/display_set_tv"
        android:layout_below="@+id/display_set_up"
        android:layout_width="264dp"
        android:layout_height="184dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/display_button_selector">
     <ImageView
         android:layout_width="264dp"
         android:layout_height="184dp"
         android:layout_centerHorizontal="true"
         android:scaleType="centerInside"
         android:focusable="false"
         android:background="@drawable/logo_ratio"/>

     <TextView
         android:id="@+id/display_set_tv_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="80dp"
         android:textColor="@android:color/white"
         android:textSize="28sp"/>
     </RelativeLayout>
     <ImageView
         android:id="@+id/display_set_down"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_below="@+id/display_set_tv"
         android:layout_centerHorizontal="true"
         android:focusable="false"
         android:background="@drawable/arrow_normal_down"/>
     </RelativeLayout>
    </LinearLayout>
</LinearLayout>
