<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/wifi_set_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:id="@+id/wifi_set_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wifi_set_main_image"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:text="@string/wifi_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/wifi_set_main_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/wifi_title_hint"/>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wifi_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:orientation="horizontal"
        android:visibility="invisible">
    <TextView
        android:id="@+id/wifi_info_title"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_wifi_lock_normal"/>
     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/setting_wifi_edittext_passwords"/>
      <ImageView
        android:id="@+id/wifi_info_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/setting_wifi_signal_connected03_normal"/>
    </LinearLayout>
    <ImageView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/line"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ListView
        android:id="@+id/wifi_info_list"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:listSelector="@drawable/list_selector"
        android:layout_centerHorizontal="true"
        android:visibility="visible" >
    </ListView>
    <RelativeLayout
        android:id="@+id/wifi_password_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:layout_height="wrap_content"
        android:visibility="invisible">
    <RelativeLayout
        android:id="@+id/wifi_edit_layout"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/input_focus_wide">
     <TextView
         android:id="@+id/wifi_password_hint"
         android:layout_width="110dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="40dp"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:text="@string/wifi_password"/>
     <EditText
         android:id="@+id/wifi_password_edit"
         android:layout_width="200dp"
         android:layout_height="40dp"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="10dp"
         android:layout_toRightOf="@+id/wifi_password_hint"
         android:background="@android:color/transparent"
         android:textColor="@android:color/white"
         android:inputType="textPassword"
         android:singleLine="true"
         android:textSize="20sp"/>
     </RelativeLayout>
     <Button
         android:id="@+id/wifi_connect_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/wifi_edit_layout"
         android:textColor="@color/white"
         android:textSize="24sp"
         android:background="@drawable/normal_button_selector"
         android:text="@string/wifi_connect"/>
     </RelativeLayout>
     <TextView
         android:id="@+id/wifi_unenable"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:textColor="@color/white"
         android:textSize="24sp"
         android:text="@string/wifi_unenable"
         android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
