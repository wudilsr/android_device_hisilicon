<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/play_set_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:id="@+id/play_set_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/play_set_main_image"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:text="@string/play_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/play_set_main_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/play_title_hint"/>
    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp" >
     <RelativeLayout
        android:id="@+id/play_audio_hdmi"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/input_wide_selector">
     <LinearLayout
         android:layout_width="200dp"
         android:layout_height="40dp"
          android:layout_marginLeft="10dp"
         android:gravity="center"
         android:orientation="vertical" >

     <TextView
         android:id="@+id/play_input_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:text="@string/play_audio_HDMI"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="310dp"
         android:layout_height="40dp"
         android:layout_marginLeft="230dp"
         android:gravity="center"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/play_hdmi_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/play_hdmi_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp" />
     </LinearLayout>
     <ImageView
         android:id="@+id/play_hdmi_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_marginLeft="30dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
      <RelativeLayout
        android:id="@+id/play_audio_spdif"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_below="@+id/play_audio_hdmi"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/input_wide_selector">
      <LinearLayout
         android:layout_width="200dp"
         android:layout_height="40dp"
         android:layout_marginLeft="10dp"
         android:gravity="center"
         android:orientation="vertical">
     <TextView
         android:id="@+id/play_spdif_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:text="@string/play_audio_SDPIF"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="310dp"
         android:layout_height="40dp"
         android:layout_marginLeft="230dp"
         android:gravity="center"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/play_spdif_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/play_spdif_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/play_spdif_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <RelativeLayout
        android:id="@+id/play_audio_hbr"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_below="@+id/play_audio_spdif"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/input_wide_selector">
      <LinearLayout
         android:layout_width="200dp"
         android:layout_height="40dp"
         android:layout_marginLeft="10dp"
         android:gravity="center"
         android:orientation="vertical">
     <TextView
         android:id="@+id/play_hbr_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:text="@string/play_audio_HBR"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="310dp"
         android:layout_height="40dp"
         android:layout_marginLeft="230dp"
         android:gravity="center"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/play_hbr_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/play_hbr_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/play_hbr_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
    <RelativeLayout
        android:id="@+id/play_video_ratio"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_below="@+id/play_audio_hbr"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/input_wide_selector">
      <LinearLayout
         android:layout_width="200dp"
         android:layout_height="40dp"
         android:layout_marginLeft="10dp"
         android:gravity="center"
         android:orientation="vertical" >
     <TextView
         android:id="@+id/play_video_ratio_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:text="@string/play_video_ratio"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="310dp"
         android:layout_height="40dp"
         android:layout_marginLeft="230dp"
         android:gravity="center"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/play_ratio_left"
          android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/play_ratio_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/play_ratio_right"
          android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <RelativeLayout
        android:id="@+id/play_video_transform"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_below="@+id/play_video_ratio"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/input_wide_selector">
      <LinearLayout
         android:layout_width="200dp"
         android:layout_height="40dp"
         android:layout_marginLeft="10dp"
         android:gravity="center"
         android:orientation="vertical" >
     <TextView
         android:id="@+id/play_video_transform_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:text="@string/play_video_ratio_transform"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="310dp"
         android:layout_height="40dp"
         android:layout_marginLeft="230dp"
         android:gravity="center"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/play_transform_left"
          android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/play_transform_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/play_transform_right"
          android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
