<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/net_set_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:id="@+id/net_set_main_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/net_set_main_image"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:text="@string/net_set_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/net_set_main_text1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/net_set_title_hint"/>
    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >
        <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_marginLeft="23dp"
         android:focusable="false"
         android:src="@drawable/line"/>
     <RelativeLayout
        android:id="@+id/net_set_main_ethenet"
        android:layout_width="600dp"
        android:layout_height="95dp"
        android:layout_marginTop="-20dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
     <TextView
         android:id="@+id/net_set_main_ethenet_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="50dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/net_set_ethenet"/>
       <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_below="@+id/net_set_main_ethenet_text"
         android:layout_marginLeft="23dp"
         android:focusable="false"
         android:src="@drawable/line"/>
     </RelativeLayout>
      <RelativeLayout
        android:id="@+id/net_set_main_wifi"
        android:layout_width="600dp"
        android:layout_height="95dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector" >
     <TextView
         android:id="@+id/net_set_main_wifi_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="50dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/net_set_wifi"/>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_below="@+id/net_set_main_wifi_text"
         android:layout_marginLeft="23dp"
         android:focusable="false"
         android:src="@drawable/line"/>
     </RelativeLayout>
      <RelativeLayout
        android:id="@+id/net_set_main_hot"
        android:layout_width="600dp"
        android:layout_height="95dp"
        android:layout_below="@+id/net_set_main_wifi"
        android:layout_marginTop="-48dp"
        android:gravity="center_vertical"
        android:nextFocusUp="@+id/net_set_main_wifi"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector"
        android:visibility="invisible">
     <TextView
         android:id="@+id/net_set_main_hot_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="20sp"
         android:gravity="left|center"
         android:text="@string/net_set_hot"/>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:layout_below="@+id/net_set_main_hot_text"
         android:layout_marginLeft="23dp"
         android:focusable="false"
         android:src="@drawable/line"/>
     </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
