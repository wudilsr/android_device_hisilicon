<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/secure_set_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:id="@+id/secure_set_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/secure_set_main_image"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:text="@string/secure_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/secure_set_main_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/secure_title_hint"/>
    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp" >
        <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="23dp"
         android:scaleType="fitXY"
         android:focusable="false"
         android:src="@drawable/line"/>
     <RelativeLayout
        android:id="@+id/secure_set_install"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-22dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector">
     <LinearLayout
         android:layout_width="350dp"
         android:layout_height="wrap_content"
         android:orientation="vertical">
     <TextView
         android:id="@+id/secure_set_install_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/secure_install"/>
     <TextView
         android:id="@+id/secure_set_install_text_hint"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/secure_set_install_text"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="12sp"
         android:text="@string/secure_install_hint"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_marginLeft="350dp"
         android:gravity="center_vertical"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/secure_install_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/secure_set_install_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"
         android:text="@string/secure_refuse"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/secure_install_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_marginLeft="30dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="23dp"
         android:scaleType="fitXY"
         android:layout_below="@+id/secure_set_install"
         android:layout_marginTop="-25dp"
         android:focusable="false"
         android:src="@drawable/line"/>
      <RelativeLayout
        android:id="@+id/secure_set_adb"
        android:layout_width="600dp"
        android:layout_height="105dp"
        android:layout_marginTop="-48dp"
        android:layout_below="@+id/secure_set_install"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/long_item_selector"
        android:visibility="invisible">
      <LinearLayout
         android:layout_width="350dp"
         android:layout_height="wrap_content"
         android:orientation="vertical">
     <TextView
         android:id="@+id/secure_set_adb_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="24sp"
         android:text="@string/secure_adb"/>
     <TextView
         android:id="@+id/secure_set_adb_text_hint"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/secure_set_adb_text"
         android:layout_marginLeft="30dp"
         android:textColor="@android:color/white"
         android:textSize="12sp"
         android:text="@string/secure_adb_hint"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_marginLeft="350dp"
         android:gravity="center_vertical"
         android:orientation="horizontal">
     <ImageView
         android:id="@+id/secure_adb_left"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:background="@drawable/setting_second_wifi_switch_left_normal"/>
      <LinearLayout
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_marginLeft="30dp"
         android:gravity="center">
     <TextView
         android:id="@+id/secure_set_adb_info"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:textSize="18sp"
         android:text="@string/secure_refuse"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/secure_adb_right"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:focusable="false"
         android:layout_marginLeft="30dp"
         android:layout_toRightOf="@+id/secure_set_adb_info"
         android:background="@drawable/setting_second_wifi_switch_right_normal"/>
      </LinearLayout>
     </RelativeLayout>
     <ImageView
         android:layout_width="555dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="23dp"
         android:scaleType="fitXY"
         android:layout_marginTop="-25dp"
         android:layout_below="@+id/secure_set_adb"
         android:focusable="false"
         android:src="@drawable/line"
         android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
