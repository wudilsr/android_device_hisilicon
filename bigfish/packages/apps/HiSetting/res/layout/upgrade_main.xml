<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/upgrade_main_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/upgrade_main_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/upgrade_main_image"
                android:text="@string/upgrade_title"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_main_text1"
                android:layout_marginLeft="18dp"
                android:text="@string/upgrade_title_hint"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <ImageView
            android:layout_width="555dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/line" />

        <RelativeLayout
            android:id="@+id/upgrade_local"
            android:layout_width="600dp"
            android:layout_height="95dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/long_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/upgrade_local_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/upgrade_local_title"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="555dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_local_text"
                android:layout_marginLeft="23dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/upgrade_online"
            android:layout_width="600dp"
            android:layout_height="95dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/long_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/upgrade_online_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/upgrade_online_title"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="555dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upgrade_online_text"
                android:layout_marginLeft="23dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/line" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
