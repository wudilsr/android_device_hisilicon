<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:id="@+id/rename_text" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:text="@string/str_rename"
		android:gravity="left" android:textSize="18sp" android:padding="2px"
		android:drawablePadding="1dip" android:drawableLeft="@drawable/edit">
	</TextView>
	<EditText android:id="@+id/rename_edit" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:autoText="false"
		android:gravity="fill_horizontal" android:singleLine="true"
		 >
	</EditText>
</LinearLayout>
