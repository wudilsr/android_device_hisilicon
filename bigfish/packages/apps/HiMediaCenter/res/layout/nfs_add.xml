<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="400dp" android:layout_height="wrap_content"
	android:orientation="vertical" android:gravity="center">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginTop="10dp">
		<TextView android:layout_width="100dip" android:textSize="20px"
			android:layout_height="wrap_content" android:text="@string/servers"
			android:gravity="right" />
		<EditText android:layout_width="280dip"
			android:layout_height="wrap_content" android:id="@+id/ipAddress1"
			android:layout_marginRight="20dip" android:singleLine="true"
			android:hint="@string/ip_address1" android:maxLength="20"
			android:digits="1234567890."
		    android:inputType="phone"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginTop="7dp">
		<TextView android:layout_width="100dip" android:textSize="20px"
			android:layout_height="wrap_content" android:text="@string/folder_position"
			android:gravity="right" />
		<EditText android:layout_width="280dip"
			android:layout_height="wrap_content" android:id="@+id/serverFolder1"
			android:layout_marginRight="20dip" android:singleLine="true"
			android:hint="@string/server_folder1" android:maxLength="50"/>
	</LinearLayout>

	<CheckBox
		android:id="@+id/add_shortcut"
		android:checked="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/add_shortcut"
		android:layout_marginLeft="70dip"
		android:nextFocusDown="@+id/myOkBut"
	/>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<Button android:layout_width="100dip" android:layout_height="wrap_content"
			android:text="@string/ok" android:id="@+id/myOkBut" />
		<Button android:layout_width="100dip" android:layout_height="wrap_content"
			android:id="@+id/myCancelBut" android:text="@string/cancel" />
	</LinearLayout>
</LinearLayout>