<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="60dip" android:gravity="center_vertical">
	<ImageView android:id="@+id/imageServer"
		android:layout_width="40dip" android:layout_height="40dip">
	</ImageView>
	<TextView android:id="@+id/textServer" android:layout_width="wrap_content"
		android:layout_height="60dip" android:textColor="@color/white"
		android:textSize="28sp" android:gravity="center_vertical"
		android:ellipsize="marquee" android:scrollHorizontally="true"
		android:marqueeRepeatLimit="marquee_forever">
	</TextView>
</LinearLayout>