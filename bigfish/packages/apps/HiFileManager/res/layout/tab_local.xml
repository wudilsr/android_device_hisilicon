                android:layout_marginLeft="110dp"
                android:layout_marginTop="220dp"
                android:gravity="center"
                android:text="@string/lan_tab_title"
                android:textSize="40sp" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_3"
