	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>

		<LinearLayout android:id="@+id/expandFile"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center">
		<ExpandableListView android:visibility="visible" android:id="@+id/expandlistView"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:focusable="true"
		android:fadingEdge="none"
		android:listSelector="@drawable/listview_item_selector"
		/>
		</LinearLayout>

		<LinearLayout android:id="@+id/listFile"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:gravity="center">
		<ListView android:visibility="invisible" android:id="@+id/listView"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:focusable="true"
		android:fadingEdge="none"
		android:listSelector="@drawable/listview_item_selector"
		/>
		</LinearLayout>

		<LinearLayout android:id="@+id/gridFile"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center">
		<GridView android:visibility="invisible" android:fadingEdge="none"
		android:layout_gravity="center" android:id="@+id/gridView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:horizontalSpacing="5dp" android:verticalSpacing="20dp"
		android:listSelector="@drawable/gridview_item_selector"
		android:columnWidth="5dp" android:numColumns="4" />
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
