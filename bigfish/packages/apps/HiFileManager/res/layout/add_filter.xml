<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:id="@+id/list" android:layout_width="810dip"
		android:layout_height="wrap_content" android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"/>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		>
		<TextView android:id="@+id/rename_text"
			android:layout_height="wrap_content" android:layout_width="790dip"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:text="@string/suffix" android:gravity="left"
			android:textSize="28sp" android:padding="2px"
			android:drawablePadding="1dip" android:drawableLeft="@drawable/edit">
		</TextView>
		<EditText android:id="@+id/add_filter" android:layout_height="wrap_content"
			android:layout_width="790dip" android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip" android:autoText="false"
			android:gravity="fill_horizontal" android:singleLine="true"
			android:textSize="28sp">
		</EditText>
	</LinearLayout>

