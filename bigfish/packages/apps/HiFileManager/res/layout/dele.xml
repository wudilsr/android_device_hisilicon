<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content" android:gravity="center_vertical">
	<ListView android:id="@+id/list" android:layout_width="fill_parent"
		android:layout_height="400dip" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center">
		<Button android:layout_width="500dip" android:layout_height="fill_parent"
			android:textSize="28sp" android:text="@string/ok" android:id="@+id/okBut"
			android:layout_marginRight="10dip" android:layout_marginTop="4dip" />

		<Button android:layout_width="500dip" android:layout_height="fill_parent"
			android:textSize="28sp" android:id="@+id/cancleBut" android:text="@string/cancel"
			android:layout_marginTop="4dip" />
	</LinearLayout>
</LinearLayout>