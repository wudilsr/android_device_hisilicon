<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical">
	<ImageView android:id="@+id/image_Icon" android:layout_width="40dip"
		android:layout_height="40dip" android:src="@drawable/icon"
		android:layout_marginLeft="4dip" android:layout_marginTop="10dip">
	</ImageView>
	<TextView android:id="@+id/text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="@color/white"
		android:textSize="@dimen/text_size" android:layout_toRightOf="@id/image_Icon">
	</TextView>
	<CheckBox android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:focusable="false" android:layout_marginTop="10dip" android:id="@+id/mychftp"
		android:visibility="invisible" />
</RelativeLayout>
