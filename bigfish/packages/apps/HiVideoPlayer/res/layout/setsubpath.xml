<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <RelativeLayout
          android:id="@+id/relativeLayout"
          style="@style/wrap_wrap"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10px">
         <TextView
                 android:id="@+id/subPathTitle"
                 style="@style/wrap_wrap"
                 android:text="@string/subpathtitle"
                 android:textColor="@color/white"
                 android:textSize="20px"
               />
         <EditText
                 android:id="@+id/subPath"
                 android:layout_width="250px"
                 android:layout_height="wrap_content"
                 android:selectAllOnFocus="true"
                 android:layout_toRightOf="@id/subPathTitle"
          />
          <Button
                 android:id="@+id/subPathButton"
                 android:layout_width="47px"
                 android:layout_height="47px"
                 android:layout_toRightOf="@id/subPath"
                 android:text="@string/three"
                 />
          <TextView
                 android:id="@+id/subPathCub"
                 style="@style/wrap_wrap"
                 android:text="@string/subpathcub"
                 android:textColor="@color/white"
                 android:textSize="17px"
                 android:layout_below="@id/subPath"
                 android:layout_toRightOf="@id/subPathTitle"
                 />
  </RelativeLayout>
   <View
      android:id="@+id/line"
         android:background="#50878787"
         android:layout_width="fill_parent"
         android:layout_height="1dip"
         android:layout_below="@id/relativeLayout"/>
   <RelativeLayout
          style="@style/fill_wrap"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/line"
          android:background="#50878750">
          <Button
                 android:id="@+id/subconfirm"
                 android:layout_width="200px"
                 android:layout_height="wrap_content"
                 android:text="@string/confirm"
                 />
          <Button
                 android:id="@+id/subcancle"
                 android:layout_width="200px"
                 android:layout_height="wrap_content"
                 android:text="@string/cancle"
                 android:layout_toRightOf="@id/subconfirm"
                 />
  </RelativeLayout>
</RelativeLayout>
