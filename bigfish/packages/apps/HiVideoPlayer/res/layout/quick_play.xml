<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <TextView
       android:id="@+id/quickPlayStr"
       style="@style/wrap_wrap"
       android:text="@string/precisionvalue"
       android:textColor="@color/white"
       android:textSize="22dip"
       />
  <EditText
       android:id="@+id/quickPlay"
       style="@style/wrap_wrap"
       android:layout_toRightOf="@id/quickPlayStr"
       android:selectAllOnFocus="true"
       android:focusable="true"
       android:numeric="integer"
       android:maxLength="4"
    />
  <TextView
       android:id="@+id/quickPlayUnit"
       style="@style/wrap_wrap"
       android:textColor="@color/white"
       android:textSize="22dip"
       android:layout_toRightOf="@id/quickPlay"
       android:layout_marginTop="3px"
       />
  <TextView
       android:id="@+id/quickPlayToast"
       style="@style/wrap_wrap"
       android:layout_toRightOf="@id/quickPlayStr"
       android:layout_below="@id/quickPlay"
       android:paddingBottom="10px"
       android:textColor="@color/white"
       android:textSize="18dip"
       android:text="@string/quickPlayToastStr"
       />


</RelativeLayout>
