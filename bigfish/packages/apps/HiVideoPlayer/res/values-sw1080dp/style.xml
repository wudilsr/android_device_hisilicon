<?xml version="1.0" encoding="utf-8"?>
<resources>
       <style name="wrap_wrap">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
       </style>
       <style name="wrap_fill">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">fill_parent</item>
       </style>
       <style name="fill_fill">
               <item name="android:layout_width">fill_parent</item>
               <item name="android:layout_height">fill_parent</item>
       </style>
       <style name="fill_wrap">
               <item name="android:layout_width">fill_parent</item>
               <item name="android:layout_height">wrap_content</item>
       </style>
       <style name="wrap_wrap_30dip">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
               <item name="android:textSize">30dip</item>
       </style>
       <style name="wrap_wrap_20dip">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
               <item name="android:textSize">20dip</item>
       </style>
       <style name="dialog" parent="@android:style/Theme.Dialog">
               <item name="android:windowNoTitle">true</item>
               <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
               <item name="android:windowIsTranslucent">true</item>
               <item name="android:backgroundDimEnabled">false</item>
       </style>
       <style name="wrap_wrap_25dip">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
               <item name="android:textSize">25dip</item>
       </style>
       <style name="top_menu">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
               <item name="android:textSize">20dip</item>
               <item name="android:layout_marginLeft">15dip</item>
               <item name="android:layout_marginRight">20dip</item>
               <item name="android:gravity">center</item>
       </style>
       <!-- basic layout -->
       <style name="styleMatchMatch">
               <item name="android:layout_width">match_parent</item>
               <item name="android:layout_height">match_parent</item>
       </style>
       <!-- dialog -->
       <style name="styleDialog" parent="@android:style/Theme.Dialog">
               <item name="android:windowIsTranslucent">true</item>
               <item name="android:backgroundDimEnabled">false</item>
               <item name="android:gravity">center</item>
               <item name="android:textStyle">bold</item>
               <item name="android:textColor">@color/azure</item>
               <item name="android:singleLine">true</item>
               <item name="android:textSize">38sp</item>
               <item name="android:shadowColor">@color/lightgray</item>
               <item name="android:shadowDx">2</item>
               <item name="android:shadowDy">2</item>
               <item name="android:shadowRadius">2</item>
       </style>
       <!-- navigation button -->
       <style name="styleNavigationButton">
               <item name="android:layout_width">170px</item>
               <item name="android:layout_height">40px</item>
               <item name="android:layout_gravity">center_vertical</item>
               <item name="android:textColor">@color/azure</item>
               <item name="android:textSize">20sp</item>
               <item name="android:clickable">false</item>
               <item name="android:background">@drawable/item_background_selector</item>
       </style>
       <style name="styleWrapWrap">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
       </style>
       <style name="styleMatchWrap">
			   <item name="android:layout_width">match_parent</item>
               <item name="android:layout_height">wrap_content</item>
       </style>
       <!-- media text -->
       <style name="styleMediaText" parent="styleWrapWrap">
               <item name="android:gravity">center</item>
               <item name="android:textStyle">bold</item>
               <item name="android:textColor">@color/azure</item>
               <item name="android:singleLine">true</item>
               <item name="android:textSize">15sp</item>
               <item name="android:shadowColor">@color/lightgray</item>
               <item name="android:shadowDx">2</item>
               <item name="android:shadowDy">2</item>
               <item name="android:shadowRadius">2</item>
       </style>
       <style name="FullScreenTheme">
               <item name="android:windowNoTitle">true</item>
               <item name="android:windowFullscreen">true</item>
               <item name="android:windowContentOverlay">@null</item>
       </style>
       <style name="imgview_style">
	       <item name="android:clickable">true</item>
               <item name="android:focusable">true</item>
               <item name="android:layout_centerVertical">true</item>
       </style>
       <style name="styleMediaInfoText" parent="styleMediaText">
               <item name="android:gravity">left|center_vertical</item>
       </style>
       <style name="AlertDialogCustom">
               <item name="android:textSize">22sp</item>
       </style>
</resources>
