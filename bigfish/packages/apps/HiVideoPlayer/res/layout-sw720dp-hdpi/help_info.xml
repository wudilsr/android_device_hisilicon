<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:scrollbars="vertical"
  android:focusable="true">
  <ImageView
       android:id="@+id/help_infoImage"
       style="@style/wrap_wrap"
       android:src="@drawable/videohelp"
       android:layout_centerHorizontal="true"
       />
  <TextView
       android:id="@+id/help_mediaInfo"
       style="@style/wrap_wrap"
       android:layout_centerHorizontal="true"
       android:text="@string/mediaInfo"
       android:textColor="@color/black"
       android:textSize="22px"
       android:layout_below="@id/help_infoImage"
       />
  <TextView
       android:id="@+id/help_mediaNameStr"
       style="@style/wrap_wrap"
       android:layout_below="@id/help_mediaInfo"
       android:text="@string/medianameStr"
       android:textColor="@color/black"
       android:textSize="14px"
       />
  <TextView
       android:id="@+id/help_mediaName"
       style="@style/wrap_wrap"
       android:layout_alignTop="@id/help_mediaNameStr"
       android:layout_toRightOf="@id/help_mediaNameStr"
       android:textColor="@color/black"
       android:textSize="14px"
       />
  <TextView
       android:id="@+id/help_mediaPathStr"
       style="@style/wrap_wrap"
       android:layout_below="@id/help_mediaName"
       android:text="@string/mediapathStr"
       android:textColor="@color/black"
       android:textSize="14px"
       />
  <TextView
       android:id="@+id/help_mediaPath"
       style="@style/wrap_wrap"
       android:layout_alignTop="@id/help_mediaPathStr"
       android:layout_toRightOf="@id/help_mediaPathStr"
       android:textColor="@color/black"
       android:textSize="14px"
       />
  <TextView
       android:id="@+id/help_mediaSizeStr"
       style="@style/wrap_wrap"
       android:layout_below="@id/help_mediaPath"
       android:text="@string/mediasizeStr"
       android:textColor="@color/black"
       android:textSize="14px"
       />
  <TextView
       android:id="@+id/help_mediaSize"
       style="@style/wrap_wrap"
       android:layout_alignTop="@id/help_mediaSizeStr"
       android:layout_toRightOf="@id/help_mediaSizeStr"
       android:textColor="@color/black"
       android:textSize="14px"
       />
</RelativeLayout>
