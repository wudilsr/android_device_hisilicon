<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
        <VideoView
             android:id="@+id/surface_view_subtitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center|right"/>
        <com.hisilicon.android.videoplayer.activity.HisiVideoView android:id="@+id/videoView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true" />
        <RelativeLayout android:id="@+id/mediaInfo" android:background="#ff223344" android:visibility="visible" android:layout_marginTop="20.0dip" style="@style/wrap_wrap">
            <RelativeLayout android:id="@+id/info" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView
                       android:id="@+id/mediaName"
			android:textSize="25sp"
			android:layout_gravity="center_vertical"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:layout_marginLeft="10.0dip"
			android:maxLength="70"
			android:ellipsize="end"
			android:singleLine="true"
			android:layout_alignParentLeft="true"
			style="@style/styleMediaInfoText" />
                <TextView
			android:id="@+id/mediaSize"
			android:textSize="25sp"
			android:layout_marginRight="20.0dip"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:layout_alignRight="@id/mediaName"
			android:layout_alignParentRight="true"
			style="@style/styleMediaInfoText" />
                <TextView
			android:id="@+id/sub"
			android:textSize="25sp"
			android:layout_marginLeft="10.0dip"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:layout_below="@id/mediaName"
			android:layout_alignParentLeft="true"
			style="@style/styleMediaInfoText" />
                <TextView
			android:id="@+id/audio"
			android:textSize="25sp"
			android:layout_marginRight="20.0dip"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:layout_below="@id/mediaSize"
			android:layout_alignParentRight="true"
			style="@style/styleMediaInfoText" />
            </RelativeLayout>
            <View android:background="#50878787" android:layout_width="fill_parent" android:layout_height="1.0dip" android:layout_below="@id/info" />
        </RelativeLayout>
        <!--<RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/playStauts_RelativeLayout" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="850.0dip" android:layout_marginTop="80.0dip">-->
        <ImageView android:id="@+id/playStauts_ImageView" android:layout_centerVertical="true" style="@style/wrap_wrap" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="850.0dip" android:layout_marginTop="80.0dip"/>
        <LinearLayout android:id="@+id/mediaControllerLayout"
			android:background="@drawable/video_bottom"
			android:visibility="invisible"
			android:layout_width="fill_parent"
			android:layout_height="150dp"
			android:layout_gravity="bottom|center_horizontal"
			android:layout_marginLeft="30dp"
			android:layout_marginBottom="5dp"
			android:layout_marginRight="30dp"
			android:orientation="vertical">
			<FrameLayout
				android:id="@+id/frameLayout"
				android:layout_width="match_parent"
				android:layout_height="60dp" >
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|center_horizontal"
					android:orientation="horizontal" >
					<TextView
							android:id="@+id/timeText"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical" />
							<!--android:text="@string/str_play_time" />-->
					<com.hisilicon.android.videoplayer.view.MySeekBar
							android:id="@+id/videoSeekBar"
							android:layout_width="1000dp"
							android:layout_height="wrap_content"
							android:layout_centerVertical="true"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:layout_weight="1"
							android:max="1000"
							android:maxHeight="6dp"
							android:minHeight="6dp"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:progressDrawable="@drawable/seekbar_style"
							android:thumb="@drawable/music_thumb"
							android:thumbOffset="15dp" />
					<TextView
							android:id="@+id/timetotal"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical" />
							<!--android:text="@string/str_play_sum_time" />-->
				</LinearLayout>
			</FrameLayout>
			<LinearLayout
				android:id="@+id/btnLinearLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|center_horizontal"
				android:orientation="horizontal" >

				<ImageView
					android:id="@+id/page_up"
					style="@style/imgview_style"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:background="@drawable/previous_button" />

				<ImageView
					android:id="@+id/rewind"
					style="@style/imgview_style"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:visibility="invisible"
					android:background="@drawable/fastbackward_button" />

				<ImageView
					android:id="@+id/play_pause"
					style="@style/imgview_style"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_margin="10dp"
					android:background="@drawable/pause_button"
					android:tag="start" />

				<ImageView
					android:id="@+id/forward"
					style="@style/imgview_style"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:visibility="invisible"
					android:background="@drawable/fastforward_button" />

				<ImageView
					android:id="@+id/page_down"
					style="@style/imgview_style"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:background="@drawable/next_button" />
			</LinearLayout>
		</LinearLayout>
</FrameLayout>
