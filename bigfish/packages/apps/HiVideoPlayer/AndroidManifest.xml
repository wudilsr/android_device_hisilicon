<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.hisilicon.android.videoplayer"
      android:versionCode="1"
      android:sharedUserId="android.uid.system"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/icon_04" android:label="@string/app_name">
       <activity android:name="com.hisilicon.android.videoplayer.activity.Main" android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                 android:label="@string/app_name" android:launchMode="singleInstance">
           <intent-filter>
           <action android:name="com.FileExplorer.activity" />
                               <category android:name="android.intent.category.DEFAULT" />
               <action android:name="android.intent.action.MAIN" />
           </intent-filter>
       </activity>
       <activity android:name="com.hisilicon.android.videoplayer.activity.VideoActivity" android:launchMode="singleTop">
           <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="android.intent.category.DEFAULT" />
               <data android:scheme="file"/>
               <data android:scheme="content"/>
               <data android:mimeType="video/*"/>
           </intent-filter>
       </activity>
       <activity android:name="com.hisilicon.android.videoplayer.activity.TransitActivity" android:launchMode="singleInstance">
           <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <action android:name="android.intent.action.VIEW" />
               <category android:name="android.intent.category.DEFAULT" />
               <data android:scheme="file"/>
               <data android:scheme="content"/>
               <data android:mimeType="video/*"/>
           </intent-filter>
       </activity>
       <activity android:name="com.hisilicon.android.videoplayer.activity.BDActivityNavigation" android:launchMode="singleInstance" android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="bluray" />
            </intent-filter>
        </activity>
        <activity android:name="com.hisilicon.android.videoplayer.activity.DVDActivityNavigation" android:launchMode="singleInstance" android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="dvd" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hisilicon.android.videoplayer.activity.FileListAcvitity"
            android:exported="true"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
       <service android:name="com.hisilicon.android.videoplayer.activity.MediaFileListService" android:launchMode="singleInstance">
               <intent-filter>
                       <action android:name="com.hisilicon.android.videoplayer.listservice"/>
               </intent-filter>
       </service>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-sdk android:minSdkVersion="8" />
</manifest>
