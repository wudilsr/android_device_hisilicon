<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/title_total"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="@string/quota_total"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/quota_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_total"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/title_used"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/title_total"
        android:layout_below="@id/title_total"
        android:gravity="right"
        android:text="@string/quota_used"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/quota_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/quota_total"
        android:layout_below="@id/quota_total"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/title_available"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/title_used"
        android:layout_below="@id/title_used"
        android:gravity="right"
        android:text="@string/quota_available"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/quota_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/quota_used"
        android:layout_below="@id/quota_used"
        android:textSize="28sp" />

</RelativeLayout>