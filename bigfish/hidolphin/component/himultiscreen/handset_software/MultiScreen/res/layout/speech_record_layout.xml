<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/speech_record_layout"
    android:background="@drawable/remote_keyboard_bg"
    android:clickable="false">
    
    <ImageView
        android:id="@+id/speech_img"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
         />
    
    <TextView
         android:id="@+id/speech_hint_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/speech_img"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="120dp"
         android:text="@string/speech_record_hint"
     />
</RelativeLayout>