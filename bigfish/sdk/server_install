
GREEN="\33[32m"
NORMAL="\33[39m"
RED="\33[31m"

echo -e ${GREEN}
echo "you must use 'root' to execute this shell "
echo -e ${NORMAL}

if [ -d ./tools/linux/toolchains/arm-hisiv200-linux ] ; then
    cd ./tools/linux/toolchains/arm-hisiv200-linux
    chmod 777 cross.install
    ./cross.install
    cd -
fi

if [ -d ./tools/linux/toolchains/arm-histbv300-linux ] ; then
    cd ./tools/linux/toolchains/arm-histbv300-linux
    chmod 777 cross.install
    ./cross.install
    cd -
fi

chmod a+s `which mknod`
chmod a+s `which chmod`
chmod a+s `which chown`
chmod a+s `which find`
chmod a+s `which cpio`
chmod a+s `which gzip`

cp -rvf ./tools/linux/utils/mkimage /bin 
chmod a+x `which mkimage`

if [ -z `which lzma` ] || [ ! -x `which lzma` ]
then
	cp -rvf ./tools/linux/utils/lzma /usr/bin 
	chmod a+x `which lzma`
fi
