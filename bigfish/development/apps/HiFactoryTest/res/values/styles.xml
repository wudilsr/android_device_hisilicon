<resources>

    <style name="LeftRelative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RightRelative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#444444</item>
    </style>

    <style name="LeftTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LeftTextInfo" parent="LeftTextTitle">
        <item name="android:textColor">#CDCD00</item>
    </style>

    <style name="RightTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RightTextInfo">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#CDCD00</item>
    </style>

    <style name="RightTextPass" parent="RightTextInfo">
        <item name="android:background">#008800</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>