<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/case_ddr_memory_size" />
        <EditText android:id="@+id/edit_memsize" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="4" android:inputType="number">
            <requestFocus />
        </EditText>
        <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/case_ddr_loops" />
        <EditText android:id="@+id/edit_loops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="2" />
        <Button android:id="@+id/restart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/case_ddr_config_restart" style="?android:attr/buttonStyleSmall" />
        <Button android:id="@+id/exit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/case_ddr_exit" style="?android:attr/buttonStyleSmall" />
    </LinearLayout>
    <View android:background="@android:color/black" android:layout_width="fill_parent" android:layout_height="2.0dip" />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/case_ddr_command_output" />
            <ScrollView android:id="@+id/scroll" android:fadingEdgeLength="2.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:textAppearanceSmall" android:id="@+id/command_output" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>
        <View android:background="@android:color/black" android:layout_width="2.0dip" android:layout_height="fill_parent" />
        <LinearLayout android:orientation="vertical" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/case_ddr_result_output" />
            <TextView android:textAppearance="?android:textAppearanceMedium" android:id="@+id/result_output" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
