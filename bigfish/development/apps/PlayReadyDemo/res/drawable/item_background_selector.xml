<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false"><shape>
            <corners android:radius="5px" />

            <gradient android:angle="270" android:centerColor="#aaa9a9a9" android:centerY="0.45" android:endColor="#aaa9a9a9" android:startColor="#aaa9a9a9" />
        </shape></item>
    <item android:state_focused="true" android:state_pressed="false"><shape>
            <corners android:radius="5px" />

            <stroke android:width="4px" android:color="#8890ee90"></stroke>

            <gradient android:angle="270" android:centerColor="#aa778899" android:centerY="0.45" android:endColor="#aa778899" android:startColor="#aa778899" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <corners android:radius="5px" />

            <stroke android:width="4px" android:color="#8890ee90"></stroke>

            <gradient android:angle="270" android:centerColor="#aaff6347" android:centerY="0.45" android:endColor="#aaff6347" android:startColor="#aaff6347" />
        </shape></item>

</selector>